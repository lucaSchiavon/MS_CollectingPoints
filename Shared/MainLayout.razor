@using MS_CollectingPoints.Data

@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager



<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <AuthorizeView>
            <Authorized>
                <a href="/" @onclick="(()=> Logout())" target="_blank">Logout</a>
            </Authorized>
            <NotAuthorized>
                <a href="/" target="_blank">Login</a>
            </NotAuthorized>
        </AuthorizeView>


    </div>

    <div class="content px-4">
        @Body
    </div>
</div>
@code {


    public async Task Logout()
    {
        CustomAuthenticationStateProvider objCustomAuthenticationStateProvider = (CustomAuthenticationStateProvider)AuthenticationStateProvider;
        objCustomAuthenticationStateProvider.MarkUserAsLoggedOut();
        //NavigationManager.NavigateTo("/");
    }
}